.property-container
	button.expander
		background-color transparent
		border none
	.expander-trigger
		text-align center
		border-top 1px solid darken(#F8F8F8, 10%)
		background-color #F8F8F8
		[class^=icon]
			display inline-block 
			cursor pointer
			transition all 0.3s
	.expander-target:not(.is-collapsed) + .expander-trigger
		[class^=icon]
			transform rotate(180deg)
.expander-target
	overflow hidden !important
	max-height 800px
	transition all 0.3s
.is-collapsed
	max-height 0 !important
