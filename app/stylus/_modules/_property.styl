.undo
	position absolute
	top 100px
	left 100px
.inspector-styles
	margin-top 70px


.property-module
	&.ng-enter 
		transition all .9s
		.property-container
			transition all .9s
			box-shadow 0px 0px 0px #777
	&.ng-enter.ng-enter-active
		.property-container
			background-color darken(#EBEBEB, 17%)
			box-shadow 0px 0px 4px #777
	&.ng-leave
		transition all .7s
		max-height 80px
		&.ng-leave-active
			max-height 0
			overflow hidden
	&:first-child
		.property-container
			margin-top 0

.property-container
	transition all .9s
	color #444
	margin-top 10px
	margin-right 20px
	background-color #EBEBEB
	.delete
		display inline-block
		margin-right 5px
		// font-size 12px
		color #aaa
		cursor pointer
		&:hover 
			opacity 0.5
	.property
		padding 0 5px
		font-weight 300
		line-height 2
	.controls
		background-color #F8F8F8
		.slider-btn
			border-radius 100%
			border none
			outline none
		.decrease
			float left
		.increase
			float right
		// padding-bottom 5px
	// styles for nested properties
	.property-container
		margin 5px 20px
#clip
	display block
	// margin-top 20px
	// margin-right 10px
	padding 20px 20px
	text-align center
	text-decoration none
	font-weight 300
	color: #333
	border-radius 3px
	background-color #ccc
	transition all 0.3s
	[class^=icon]
		margin-right 7px
		color #666
	&.zeroclipboard-is-hover
		background-color darken(#ccc, 10%)
	&.zeroclipboard-is-active
		margin-top 25px
		background-color darken(#ccc, 30%)

.property.color
	input
		background transparent
		border none
		max-width 80px
	.color-preview
		display inline-block
		width 20px
		height 20px
		vertical-align sub
		background-color: #fff
.colorpicker
	background-color #fff
	border 1px solid #ddd
	&:before
		content: "";
		display: block;
		width: 0;
		height: 0;
		border: inset 6px;
		border-color: transparent transparent #fff transparent;
		border-bottom-style: solid;
		position: absolute;
		top: -12px;
		left: 10px;
		z-index: 99;
	&:after
		content: "";
		display: block;
		width: 0;
		height: 0;
		border: inset 7px;
		border-color: transparent transparent #ddd transparent;
		border-bottom-style: solid;
		position: absolute;
		top: -14px;
		left: 9px;
		z-index: 98;
	button
		margin-top 8px
		color #333
		background-color #ddd
		border none
		transition all 0.3s
		&:hover
			background-color #ccc
.property.options
	position relative
	padding-right 0
	&:hover
		select
			color #111
		&::after
			color: rgba(0,0,0,.6);
		&::before
			background-color: rgba(0,0,0,.2);
	select
		appearance none
		background-color transparent
		border none
		padding-right 47px
	&::after, &::before
		content: "";
		position: absolute;
		pointer-events: none;
		transition all 0.3s
	&::before
		background-color: rgba(0,0,0,.15);
		width: 2em;
		right: 0;
		top: 0;
		bottom: 0;
	&::after
		color: rgba(0,0,0,.4);
		content: "\25BC";
		height: 1em;
		font-size: .625em;
		line-height: 1;
		right: 1.2em;
		top: 50%;
		margin-top: -.5em;


