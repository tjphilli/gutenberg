.undo
	position absolute
	top 100px
	left 100px

.property-container
	color #444
	margin-top 10px
	margin-right 20px
	background-color #EBEBEB
	.delete
		display inline-block
		margin-right 5px
		// font-size 12px
		color #aaa
		cursor pointer
		&:hover 
			opacity 0.5
	.property
		padding 0 5px
		font-weight 300
		line-height 2
	.controls
		background-color #F8F8F8
		.slider-btn
			border-radius 100%
			border none
			outline none
		.decrease
			float left
		.increase
			float right
		// padding-bottom 5px
	// styles for nested properties
	.property-container
		margin 5px 20px
#clip
	display block
	// margin-top 20px
	// margin-right 10px
	padding 20px 20px
	text-align center
	text-decoration none
	font-weight 300
	color: #333
	border-radius 3px
	background-color #ccc
	transition all 0.3s
	[class^=icon]
		margin-right 7px
		color #666
	&.zeroclipboard-is-hover
		background-color darken(#ccc, 10%)
	&.zeroclipboard-is-active
		margin-top 25px
		background-color darken(#ccc, 30%)
		
.property.options
	position relative
	padding-right 0
	&:hover
		select
			color #111
		&::after
			color: rgba(0,0,0,.6);
		&::before
			background-color: rgba(0,0,0,.2);
	select
		appearance none
		background-color transparent
		border none
		padding-right 47px
	&::after, &::before
		content: "";
		position: absolute;
		pointer-events: none;
		transition all 0.3s
	&::before
		background-color: rgba(0,0,0,.15);
		width: 2em;
		right: 0;
		top: 0;
		bottom: 0;
	&::after
		color: rgba(0,0,0,.4);
		content: "\25BC";
		height: 1em;
		font-size: .625em;
		line-height: 1;
		right: 1.2em;
		top: 50%;
		margin-top: -.5em;


